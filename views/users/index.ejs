<h2>Usuarios</h2>

<table class="lista">
	<% for(var i in users) {%>
		<tr>
			<td><a href="/users/<%= users[i].id %>" class="lista"><%= users[i].username %></a><%= users[i].isAdmin ? " (Admin)" : "" %></td>
			<% if(session.user) { %>
				<% if(session.user.isAdmin || (session.user.id === users[i].id)) { %>
					<td><a href="/users/<%= users[i].id %>/edit"><button id="editar">editar</button></a></td>
				<% } %>
				<% if(session.user.isAdmin && (session.user.id !== users[i].id)) { %>
					<td><a href="/users/<%= users[i].id %>/?_method=DELETE" onClick="return confirm('Borrar cuenta: <%= users[i].username %>');"><button id="borrar">borrar</button></a></td>
				<% } %>
			<% } %>
		</tr>
	<% } %>
</table>